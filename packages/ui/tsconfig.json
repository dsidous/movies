{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom",
      "dom.iterable",
      "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@atoms/*": ["components/atoms/*"],
      "@hooks/*": ["components/hooks/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],
      "@providers/*": ["components/providers/*"],
      "@templates/*": ["components/templates/*"],
      "@components/*": ["components/*"],
      "@typesRoots/*": ["types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/images",
    "images"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "types": [
    "typePatches"
  ]
}