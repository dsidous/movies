{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom",
      "dom.iterable",
      "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/images",
    "images"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "types": [
    "typePatches"
  ]
}